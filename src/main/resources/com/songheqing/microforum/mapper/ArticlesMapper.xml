<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.songheqing.microforum.mapper.ArticlesMapper">

    <!-- 动态插入文章 -->
    <insert id="insert" parameterType="com.songheqing.microforum.entity.Article"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article (
            user_id,
            channel_id,
            title
            <if test="contentPreview != null and contentPreview != ''">
                , content_preview
            </if>
            <if test="content != null and content != ''">
                , content
            </if>
        ) VALUES (
            #{userId},
            #{channelId},
            #{title}
            <if test="contentPreview != null and contentPreview != ''">
                , #{contentPreview}
            </if>
            <if test="content != null and content != ''">
                , #{content}
            </if>
        )
    </insert>

    <resultMap id="ArticleListMap" type="com.songheqing.microforum.dto.ArticleListDTO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="channelId" column="channel_id"/>
        <result property="title" column="title"/>
        <result property="contentPreview" column="content_preview"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <collection property="coverImageUrl" ofType="com.songheqing.microforum.dto.ImageDTO">
            <result property="imageUrl" column="image_url"/>
            <result property="orderNum" column="order_num"/>
        </collection>
    </resultMap>

    <select id="selectAll" resultMap="ArticleListMap">
        SELECT
            a.id,
            a.user_id,
            a.channel_id,
            a.title,
            a.content_preview,
            a.create_time,
            a.update_time,
            i.image_url,
            i.order_num
        FROM
            article a
        LEFT JOIN images i
            ON i.entity_type = 'ARTICLE'
            AND i.entity_id = a.id
        ORDER BY a.create_time DESC, i.order_num ASC
        LIMIT #{offset}, #{pageSize}
    </select>

</mapper> 