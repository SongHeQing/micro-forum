<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.songheqing.microforum.mapper.UserMapper">

    <select id="login" resultType="com.songheqing.microforum.entity.User">
        select id, username, email from user 
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

    <select id="findByUsername" resultType="com.songheqing.microforum.entity.User">
        select 1 from user where username = #{username} limit 1
    </select>

    <select id="findByEmail" resultType="com.songheqing.microforum.entity.User">
        select 1 from user where email = #{email} limit 1
    </select>

    <insert id="insert" parameterType="com.songheqing.microforum.entity.User">
        insert into user (email, password) values (#{email}, #{password})
    </insert>
</mapper>